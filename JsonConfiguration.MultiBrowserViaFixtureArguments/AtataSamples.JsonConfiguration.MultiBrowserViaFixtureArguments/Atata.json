{
  "drivers": [
    {
      "type": "chrome",
      "options": {
        "arguments": [ "start-maximized" ]
      }
    },
    {
      "type": "internetexplorer"
    },
    {
      "type": "firefox",
      "service": {
        "driverPath": "{basedir}",
        "hostName": "127.0.0.1"
      }
    },
    // For remote browser:
    {
      "type": "remote",
      "alias": "chrome_remote",
      "remoteAddress": "http://127.0.0.1:8888/wd/hub",
      "options": {
        "type": "chrome"
        // TODO: Set specific options.
      }
    }
  ],
  "baseUrl": "https://demo.atata.io/",
  "culture": "en-US",
  "useAllNUnitFeatures": true
}
